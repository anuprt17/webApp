<div class="row">
 <div class="col-md-12">
 <h2>Posts <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
 <hr />
 
 <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th style="text-align: center;">Post ID</th>
                <th style="text-align: center;">Title</th>
                <th style="text-align: center;">Post&nbsp;Date</th>
                <th style="text-align: center;">Category</th>
                <th style="text-align: center;">Published</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <!--<td>{{postDate}}</td>-->
                <td>{{#formatDate postDate}}{{/formatDate}}</td>
                <td><a href="/posts?category={{category}}">{{category}}</a></td>
                <td>{{published}}</td>
                <td><a class="btn btn-danger" href="/post/delete/{{this.id}}">remove</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
 </div>
 </div>
 {{#unless posts}}
 <div class="col-md-12 text-center">
 <strong>{{message}}</strong>
</div>
 {{/unless}}
</div>
